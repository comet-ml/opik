{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "paths": {
      "@opik": ["./src/opik/index.ts"],
      "@/*": ["./src/opik/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}

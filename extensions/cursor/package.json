{
  "name": "opik",
  "displayName": "Opik - Save and share your chat history",
  "description": "Export your chat history from Cursor to Opik.",
  "repository": "https://github.com/comet-ml/opik",
  "publisher": "jverre",
  "version": "0.2.0",
  "preview": false,
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "icon.png",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Opik",
      "properties": {
        "opik.apiKey": {
          "type": "string",
          "default": "",
          "description": "Opik API Key used to store your chat sessions"
        },
        "opik.projectName": {
          "type": "string",
          "default": "cursor",
          "description": "The name of the Opik project to store Cursor chat sessions in"
        },
        "opik.VSCodePath": {
          "type": "string",
          "default": "",
          "description": "Path to the VSCode user data directory. Leave empty to use the default path."
        },
        "opik.skipHistoricalConversations": {
          "type": "boolean",
          "default": true,
          "description": "Skip conversations without new messages. When enabled, only conversations with new messages are processed. When disabled, all unsynced conversations are processed."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "vsce pack",
    "compile": "tsc -p ./",
    "deploy": "vsce publish",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sql.js": "^1.4.5",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.2",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@sentry/node": "^10.11.0",
    "glob": "^11.0.1",
    "node-fetch": "^3.3.2",
    "opik": "^1.7.2",
    "posthog-node": "^4.18.0",
    "sql.js": "^1.10.2"
  }
}

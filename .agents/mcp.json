{
  "mcpServers": {
    "GitHub": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "-e",
        "GITHUB_TOOLSETS=repos,pull_requests,issues",
        "ghcr.io/github/github-mcp-server"
      ],
      "envFile": "${workspaceFolder}/.env.local"
    },
    "Atlassian": {
      "command": "npx -y mcp-remote https://mcp.atlassian.com/v1/sse",
      "env": {},
      "args": []
    }
  }
}
